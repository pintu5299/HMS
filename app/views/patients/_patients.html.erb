 <div class="container">
  <%= bootstrap_form_with model: patient do |form| %>
    <div class="row">
      <div class="col-lg-2">
        <div class="form-group">
          <%= form.label :name, class:'mb-2'%>
          <%= form.text_field :Name, class: 'form-control form-control-lg
            rounded-0' %>
            
        </div>
      </div>

      <div class="col-lg-2">
        <div class="form-group">
          <%= form.label :age, class:'mb-2'%>
          <%= form.text_field :age, class: 'form-control form-control-lg
            rounded-0' %>
            

        </div>
      </div>
      <div class="col-lg-2">
        <div class="form-group">
          <%= form.label :guardian_name, class:'mb-2'%>
          <%= form.text_field :father_name, class: 'form-control form-control-lg
            rounded-0' %>
          
        </div>
      </div>
      <div class="col-lg-2">
        <div class="form-group",>
          <%= form.label :mobile, class:'mb-2'%>
          <%= form.text_field :mobile, class: 'form-control form-control-lg
            rounded-0' %>
           
        </div>
      </div>
          <div class="col-lg-2">
         <div class="form-group",>
          <%= form.label :address, class:'mb-2'%>
          <%= form.text_field :address, class: 'form-control form-control-lg
            rounded-0' %>
          
        </div>
      </div>
    </div>
  <div class="row">
    <div class="col-lg-12 mt-4">
    <%= form.submit class: 'btn btn-primary btn-lg rounded-0'%>
    <%= link_to "Back to patient", patients_path,class: "btn btn-primary btn-lg rounded-0" %>
  </div>
</div>
  <% end %>
</div>
