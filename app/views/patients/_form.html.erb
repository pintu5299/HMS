<div class="container">
<%= bootstrap_form_with model: patient do |form| %>
  <div class="field form-group">
    <%= form.text_field :name, class:"form-control", placeholder: "Patient Name" %>
  </div>
  <div class="field form-group">
    <%= form.text_field :age, class:"form-control", placeholder: "age" %>
  </div>
  <div class="field form-group">
    <%= form.text_field :guardian_name, class:"form-control", placeholder: "guardian_name" %>
  </div>
  <div class="field form-group">
    <%= form.text_field :mobile, class:"form-control", placeholder: "mobile" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :address, class:"form-control", placeholder: "address" %>
  </div>
  <div>
    <%= form.submit %>
  </div>
  <% end %>
</div>