<div class="container">
<%= bootstrap_form_with model: appointment do |form| %>
  <div class="field form-group">
    <%= form.text_field :patient_name,  class:"form-control", placeholder: "Patient_name"%>
  </div>
  <div class="field form-group">
    <%= form.text_field :age,  class:"form-control", placeholder: "Patient_age"%>
  </div>

  <div class="field form-group">
    <%= form.text_field :gender,  class:"form-control", placeholder: "gender"%>
  </div>
  
  <div class="field form-group">
    <%= form.text_field :user_id, class:"form-control", placeholder: "id"%>
  </div>
  <div class="field form-group">
    <%= form.text_field :guardians_name,  class:"form-control", placeholder: "Guardians_name"%>
  </div>
  <div class="field form-group">
    <%= form.text_field :contact,  class:"form-control", placeholder: "contact"%>
  </div>
  <div class="field form-group">
    <%= form.text_field :email,  class:"form-control", placeholder: "email"%>
  </div>
  <div class="field form-group">
    <%= form.text_field :address,  class:"form-control", placeholder: "address"%>
  </div>
  <div class="field form-group">
    <%= form.text_field :doctor_name, class:"form-control", placeholder: "Doctor Name", :readonly => true %>
  </div>
  <div class="field form-group">
    <%= form.text_field :doctor_id, class:"form-control", placeholder: "doctor_id", :readonly => true %>
  </div>
  <div class="field form-group">
    <%= form.text_field :patient_id, class:"form-control", placeholder: "patient_id" %>
  </div>

   <div class="field form-group">
    <%= form.text_field :speciality, class:"form-control", placeholder: "speciality"%>
  </div>
  <div class="field form-group">
    <%= form.text_field :consultancy_fee, class:"form-control", placeholder: "Consultancy_Fee", :readonly => true %> 
  </div>
  <div class="field form-group">
    <%= form.date_field :appointment_date, class:"form-control", placeholder: "Appointment_date" %>
  </div>
  <div class="field form-group">
    <%= form.time_field :appointment_time, class:"form-control", placeholder: "Appointment_time" %>
  </div>
  <div class=" field form-group">
       <%= form.file_field :image %>
     </div>
  <div>
    <%= form.submit %>
  </div>
  <% end %>  
</div> 